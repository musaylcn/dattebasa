<script>

  let sayi = 0;
  const searchForm=document.querySelector("#searchForm")
  const input = document.querySelector("#input");
  const AnaAnim = document.querySelectorAll(".aEtiket")
  const toggler = document.querySelector(".navbar-toggler");
  const navİtem = document.querySelectorAll(".nav-item");
  toggler.addEventListener('click', function () {
    console.log(sayi);
    if (sayi % 2 == 0) {
      searchForm.style.width="100%";
      for (let i = 0; i < navİtem.length; i++) {
        navİtem[i].style.fontSize = "20px";
        navİtem[i].style.margin = "10px";
      }

    }
    else {
      
      setTimeout(function () {
        searchForm.style.width="50%";
        for (let i = 0; i < navİtem.length; i++) {
          navİtem[i].style.fontSize = "";
          navİtem[i].style.margin = "";
        }
      }, 400);

    }

    sayi++;
  });



  if (window.location.pathname == "/animeler") {
    AnaAnim[1].style.color = "yellow";
  }



  document.getElementById("searchForm").addEventListener("submit", function (e) {
    e.preventDefault();
    let inputValue = input.value.trim().toLowerCase();
    let keys = Object.keys(localStorage);
    keys.forEach((key) => {
      if (inputValue.toLowerCase().replace(/\s/g, "") === key.toLowerCase().replace(/\s/g, "")) {
        window.location.href = `/animeler/${key}`;
      }
    });
  });





</script>