    <form class="my-2 my-lg-0" id="searchForm" style="width: 50%;">
      <div class="input-group" style="display: flex;justify-content: center; align-items: center;" >
        <input class="form-control mr-0" id="input" placeholder="Anime Ara..." aria-label="Search">
        <div class="input-group-append">
          <button class="btn text-light" type="submit" style="background-color: rgb(43, 43, 43);"><i
              style="font-size: 15px;" class="fa-solid fa-magnifying-glass"></i></button>
