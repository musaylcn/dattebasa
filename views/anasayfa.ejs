<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--icon için link-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <!--BOOTSTRAP için link-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <title>ANASAYFA</title>

    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }



        button:hover {
            border-bottom: 3px solid white !important;
            cursor: pointer;
        }

        .search {
            border: none;
            font-size: 15px;
            background-color: rgb(32, 32, 32);
            color: rgb(211, 211, 211);
            width: 100%;
            border-radius: 18px;
            font-weight: bold;
            height: 40px;
        }

        .choose {
            border: none;
            font-size: 15px;
            background-color: rgb(32, 32, 32);
            color: rgb(211, 211, 211);
            width: 100%;
            border-radius: 18px;
            font-weight: bold;
            height: 40px;
        }

        .boddy {
            position: relative;
            width: 100%;
            height: 100vh;
            background-image: url("https://cutewallpaper.org/21/boruto-hd-wallpaper/Boruto-Uzumaki,-Katana,-Kamakarma-Mark,-Seal,-Boruto-.jpg");
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }

        #satir1 {
            width: 50%;
            margin:5px 0px;
        }

        #satir2 {
            width: 50%;
            display: flex;

        }


        @media (max-width: 700px) {
            #satir1 {
                width: 100%;
            }

            #satir2 {
                width: 100%;
            }
        }
    </style>
</head>

<body>



    <!---------------------------------------------------------------------------------------------------------------------------->

    <div class="boddy">
        <div class="warnDiv"></div>


        <div class="container-fluid justify-content-center align-items-center"
            style="height: 100px;display: flex;flex-direction: column;position: absolute; top: 43vh;background: rgba(46,175,255,0.5);">
            <div id="satir1" class="row justify-content-center align-items-center">
                <div class="col-6">
                    <button class="search">ANİME ARA</button>
                </div>
                <div class="col-6">
                    <button class="choose">ANİME SEÇ</button>
                </div>

            </div>

            <div id="satir2" class="row justify-content-center satir">
                <div class="col-12">
                    <div class="inputdivi"> </div>
                </div>
            </div>
        </div>


    </div>







    <script>
        const animes = [
            {
                name: 'naruto',
                url: 'https://i.pinimg.com/originals/f2/4e/e2/f24ee2c0327e81c513be83cc005df8bc.jpg'
            },
            {
                name: 'death note',
                url: 'https://assets.dragoart.com/images/7548_501/how-to-draw-death-note_5e4c8c59476df7.36051531_32053_3_3.jpg'
            },
            {
                name: 'one piece',
                url: 'https://cdn.1min30.com/wp-content/uploads/2018/11/One-Piece-logo-embleme.jpg'
            },
            {
                name: 'sailor moon',
                url: 'https://assets.change.org/photos/4/ra/wh/kkRAwHyjXDXjUQj-1600x900-noPad.jpg?1674837362'
            },
            {
                name: 'attack on titan',
                url: 'https://images5.alphacoders.com/786/786117.png'
            },
            {
                name: 'one punch man',
                url: 'https://mobimg.b-cdn.net/v3/fetch/d8/d8879989cff413ad8b940e26ae778a79.jpeg?w=1470&r=0.5625'
            },
            {
                name: 'seraph of the end',
                url: 'https://i.ytimg.com/vi/RT3x1umF-K4/maxresdefault.jpg'
            },
            {
                name: 'demon slayer',
                url: 'https://pbs.twimg.com/media/FLz9mV3WQAos5Dg?format=jpg&name=large'
            },
            {
                name:'boruto',
                url:'https://pbs.twimg.com/media/FiLvjNBWIAIqo0L?format=jpg&name=large'
            }
        ];
        for (let i = 0; i < animes.length; i++) {
            localStorage.setItem(animes[i].name, animes[i].url);
        }


        let sayi = 0;
        const inputdivi = document.querySelector(".inputdivi")
        const buttonChoose = document.querySelector(".choose")
        buttonChoose.addEventListener("click", sayfayagit);
        const buttonSearch = document.querySelector(".search");
        buttonSearch.addEventListener("click", inputgetir);
        const warnDiv = document.querySelector(".warnDiv")

        function inputgetir() {
            if (sayi % 2 == 0) {
                event.preventDefault();

                const input = document.createElement("input");
                input.style.width = "100%";
                input.type = "search";
                input.style.fontSize = "20px";
                input.style.height = "35px";
                input.style.borderRadius = "20px";
                input.style.padding = "10px";
                input.style.flexOrder = 2
                input.addEventListener("keyup", write);

                function write(e) {
                    console.log(input.value);
                    let enter = e.key;
                    let keys = Object.keys(localStorage);
                    if ((input.value.trim() === "") && enter === "Enter") {
                        warnDiv.textContent = "";
                        let warn = document.createElement("div");
                        warn.className = "alert alert-warning";
                        warn.role = "alert";
                        warn.textContent = "Lütfen geçerli bir değer giriniz !!";
                        warn.style.width = "auto";
                        warn.style.height = "auto";
                        warnDiv.appendChild(warn);

                        // 3 saniye sonra uyarıyı kaldır
                        setTimeout(() => {
                            warn.remove();
                        }, 3000);
                    }
                    else {
                        let matchFound = false; // Eşleşme kontrolü için bir değişken tanımla

                        keys.forEach((key) => {
                            if (input.value.replace(/\s/g, "").toLowerCase() === key.replace(/\s/g, "") && enter === "Enter") {
                                matchFound = true; // Eşleşme olduğunda değişkeni true olarak işaretle
                                window.location.href = `/animeler/${key}`;
                            }
                        });

                        if (!matchFound && enter === "Enter") {
                            warnDiv.textContent = "";
                            let warn = document.createElement("div");
                            warn.className = "alert alert-warning";
                            warn.role = "alert";
                            warn.textContent = "Böyle bir anime yok !";
                            warn.style.width = "auto";
                            warn.style.height = "auto";
                            warnDiv.appendChild(warn);

                            // 3 saniye sonra uyarıyı kaldır
                            setTimeout(() => {
                                warn.remove();
                            }, 3000);
                        }

                    }
                }

                const div = document.querySelector(".inputdivi");
                div.appendChild(input);
                input.focus();
            } else {
                const input = document.querySelector("input");
                input.remove();
            }

            sayi += 1;
        }

        function sayfayagit() {
            window.location.href = "/animeler"
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"
        integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+"
        crossorigin="anonymous"></script>
</body>

</html>